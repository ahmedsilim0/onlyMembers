<!DOCTYPE html>
<html lang="en">
  <%- include("./includes/_head"); %>
  <body>
    <%- include("./includes/_header"); %>
    <%- include("./includes/_nav"); %>
    <main class="users-list">
      <h1>List of all registered users:</h1>
      <h3>Admins:</h3>
      <div class="users-group">
        <% admins.map(user => { %> 
          <div class="user-card">
            <p>
              <strong>Name:</strong> <%= user.name %>
            </p>
            <p>
              <strong>Username:</strong> <%= user.username %>
            </p>
            <p>
              <strong>Messages Count:</strong> <%= user.messages.length %>
            </p>
          </div>
        <% }) %>
      </div>
      <h3>Members:</h3>
      <div class="users-group">
        <% members.map(user => { %> 
          <div class="user-card">
            <p>
              <strong>Name:</strong> <%= user.name %>
            </p>
            <p>
              <strong>Username:</strong> <%= user.username %>
            </p>
            <p>
              <strong>Messages Count:</strong> <%= user.messages.length %>
            </p>
          </div>
        <% }) %>
      </div>
      <h3>Guests:</h3>
      <div class="users-group">
        <% guests.map(user => { %> 
          <div class="user-card">
            <p>
              <strong>Name:</strong> <%= user.name %>
            </p>
            <p>
              <strong>Username:</strong> <%= user.username %>
            </p>
            <p>
              <strong>Messages Count:</strong> <%= user.messages.length %>
            </p>
          </div>
        <% }) %>
      </div>

    </main>

    <%- include("./includes/_footer"); %>
  </body>
</html>